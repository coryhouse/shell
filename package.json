{
  "name": "shell",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "^15.0.3",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.2.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "html-webpack-plugin": "5.5.3",
    "react-hot-loader": "^4.13.1",
    "serve": "14.2.0",
    "surge": "^0.23.1",
    "ts-loader": "^9.1.2",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "scripts": {
    "start:remote-1": "cd ../remote-1 && npm start",
    "start:remote-2": "cd ../remote-2 && npm start",
    "start:shell": "webpack serve",
    "start": "concurrently npm:start:remote-1 npm:start:remote-2 npm:start:shell",
    "//build": "surge redirects all unmatched routes to 200.html, so copy index.html to 200.html to support client-side rendering of deep links.",
    "build": "webpack --mode production && cd dist && cp index.html 200.html",
    "analyze": "cross-env ANALYZE=Y npm run build",
    "clean": "rm -rf dist",
    "deploy": "npm run build && cd dist && surge --domain complete-quill.surge.sh",
    "deploy:remote-1": "cd ../remote-1 && npm run deploy",
    "deploy:remote-2": "cd ../remote-2 && npm run deploy",
    "deploy-all": "concurrently -g npm:deploy npm:deploy:remote-1 npm:deploy:remote-2"
  },
  "dependencies": {
    "dotenv": "^14.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-router-dom": "^6.12.1"
  }
}
